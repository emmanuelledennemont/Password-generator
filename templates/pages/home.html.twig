{% extends 'base.html.twig' %}

{% block title %}
    Password generator
{% endblock %}

{% block body %}
    <div class="container-sm d-flex align-items-center justify-content-center w-100 h-100  mx-auto flex-column">
        <div class="card shadow col-md-8" style="max-width: 840px;">
            <div class="card-header">
                <h1 class="mt-2 mb-2 d-flex align-items-center justify-content-center">
                    Password Generator
                </h1>
            </div>

            <div class="card-body">
                <form id="js-form" methode="get" action="{{ path ('app_generate_password') }}">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 px-5">
                                <label for="length" class="form-label">
                                    Length                          
                                </label>
                                <select id="length state" name="length" class="form-select">
                                    {% for i in password_min_length..password_max_length %}
                                        <option value="{{ i }}" {{ i == password_default_length ? 'selected' }}>
                                            {{ i }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-6">
                        <div class="form-check  d-flex flex-column justify-content-end text-start mx-4" style="max-width: 240px;">
                            <div class="form-check">
                                <label for="uppercase" class="form-check-label">
                                    Uppercase letters                                                                     
                                                                    
                                </label>

                                <input type="checkbox" id="uppercase" name="uppercase" class="form-check-input">
                            </div>
                                <div class="form-check">
                                    <label for="digits" class="form-check-label">
                                        Digits                            
                                                                            
                                    </label>
                                    <input type="checkbox" id="digits" name="digits" class="form-check-input">
                                </div>

                                    <div class="form-check">
                                        <label for="special" class="form-check-label">
                                            Special Characters                                                                                    
                                    
                                        </label>
                                        <input type="checkbox" id="special" name="special_characters" class="form-check-input"></div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn m-3">
                                        Generate password                                  
                                    </button>
                                </div>
                            </form>
                            <div class="mt-3 text-light">
                                <a href="https://www.ssi.gouv.fr/administration/precautions-elementaires/calculer-la-force-dun-mot-de-passe/">
                                    Suivre ce lien                               
                                </a>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        <footer class="py-3 footer mt-auto">
            <p class="text-center d-flex align-items-center justify-content-center mb-1 mt-1">
                Built with Symfony &hearts; 2022 by Manue                   
                                                                
                                            
                                    
                    
            </p>
        </footer>
    </div>
{% endblock %}

